<div class="container pt-5">
  <h1 class="pt-5 my-3">Welcome home, <%= current_user.first_name %>!
<i class="fa-solid fa-hand-peace" style="color: #5465FF;"></i></h1>



  <% @flats.each do |flat| %>
    <div class="card my-3">
      <div class="row g-0">
        <div class="col-4">
          <%= cl_image_tag flat.photos.first.key, width: 112, height: 112, crop: :fill %>
        </div>
        <div class="col-8">
          <div class="card-body">
            <h5 class="card-title">Card title</h5>
            <p class="card-text"><%= flat.address %></p>
          </div>
        </div>
      </div>
    </div>
  <% end %>


</div>
