<div class="header-carousel">
  <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
    <div class="carousel-inner">
      <div class="carousel-item active">
        <% @belonging.photos.each_with_index do |photo, index| %>
          <% if index == 0 %>
            <div class="carousel-item active ">
              <%= cl_image_tag photo.key, height: 200, width: 400, crop: :fill, class: "image-big d-block mx-auto" %>
            </div>
          <% else %>
            <div class="carousel-item">
              <%= cl_image_tag photo.key, height: 200, width: 400, crop: :fill, class: "image-big d-block mx-auto" %>
            </div>
          <% end%>
        <% end %>
      </div>
      <div class="back-edit-icons">
        <%= link_to flats_path do %>
          <i class="fa-solid fa-arrow-left" style="color: #FDFDFD;"></i>
        <% end %>
        <%= link_to flats_path do %>
          <i class="fa-solid fa-pen-to-square" style="color: #FDFDFD;"></i>
        <% end %>
      </div>
    </div>
    <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="sr-only">Next</span>
    </a>
    </div>
  <div class="headline-description-belonging">
    <h3 class="headline-belonging"><%= @belonging.name %></h3>
    <%= @belonging.category.name.capitalize %>
  </div>
</div>

<div class="status-icon-overlap">
  <p>Status: <%= @belonging.status %></p>
</div>


<div class="page-container">
  <p class="description"><%= @belonging.description %></p>

  <h3>Attachments</h3>
  <h3>Active To dos</h3>
  <h3>History</h3>

  <ul class="list-group">
      <li class="list-group-item">
        <%= @belonging.name %>
        <%= @belonging.description %>
        <%= @belonging.status %>
        <%= link_to "Delete",
                    flat_belongings_path(@belonging),
                    method: :delete,
                    data: {
                      turbo_confirm: "Are you sure?",
                      disable_with: "Deleting...",
                      confirm_swal: "true"
                    } %>

          <%#= link_to edit_belonging_path(belonging), 'edit'%>
      </li>
  </ul>
</div>
